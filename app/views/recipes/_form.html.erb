<%= render 'shared/errors', obj: @recipe %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            
            <%# group1 %>
            <div class="form-group">
                <div class="control-label col-md-2"><%= f.label :name %></div>
                <div class="col-md-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Name of the recipe",  autofocus: true %>
                </div>
            </div>

            <%# group2 %>
            <div class="form-group">
                <div class="control-label col-md-2"><%= f.label :sell_price %></div>
                <div class="col-md-8">
                    <%= f.text_field :sell_price, class: "form-control", placeholder: "How many coins is it worth?",  autofocus: true %>
                </div>
            </div>

            <%# grou3 %>
            <div class="form-group">
                <div class="control-label col-md-2"><%= f.label :description %></div>
                <div class="col-md-8">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Describe how you've got these delicious pixels!" %>
                </div>
            </div>

            <%# Add ingredients %>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-offset-2 col-md-8">
                        <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |cb| %>
                            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                        <% end %>
                    </div>
                </div>
            </div>

            <%# group4-button %>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" id="createNew">
                <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
                </div>
            </div>    
        <% end %>

        <%# goBackGroup %>
        <div class="center col-md-4 col-md-offset-4 colormatch" id="cancelNewRecipe">
            [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
        </div>
    </div>
</div>

